<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Application Texts -->
    <sys:String x:Key="AppTitle">Koei Tecmo Archive Migrator</sys:String>

    <!-- Main Window UI -->
    <sys:String x:Key="LabelRootDir">Root Directory:</sys:String>
    <sys:String x:Key="ButtonBrowse">Browse</sys:String>
    <sys:String x:Key="LabelGame">Game:</sys:String>
    <sys:String x:Key="LabelSteamId">Steam ID:</sys:String>

    <!-- DataGrid Columns -->
    <sys:String x:Key="ColumnSelect">Select</sys:String>
    <sys:String x:Key="ColumnName">Name</sys:String>
    <sys:String x:Key="ColumnStatus">Status</sys:String>
    <sys:String x:Key="ButtonMigrate">Migrate Selected</sys:String>

    <!-- Menu Items -->
    <sys:String x:Key="MenuLanguage">Language</sys:String>
    <sys:String x:Key="MenuChinese">Chinese</sys:String>
    <sys:String x:Key="MenuEnglish">English</sys:String>
    <sys:String x:Key="MenuAbout">About</sys:String>

    <!-- Status Messages -->
    <sys:String x:Key="StatusSuccess">Success ✔</sys:String>
    <sys:String x:Key="StatusNeedsMigration">Needs Migration ⚠</sys:String>
    <sys:String x:Key="StatusUnknown">Unknown ✗</sys:String>
    <sys:String x:Key="StatusFileMissing">File Missing ✗</sys:String>

    <!-- Error Messages -->
    <sys:String x:Key="ErrorTitle">Error</sys:String>
    <sys:String x:Key="ErrorDirReadFailed">Failed to read directory: {0}</sys:String>
    <sys:String x:Key="ErrorSteamIdReadFailed">Failed to read Steam ID directory: {0}</sys:String>
    <sys:String x:Key="ErrorArchiveLoadFailed">Failed to load archives: {0}</sys:String>

    <!-- About Text -->
    <sys:String x:Key="AboutText">Koei Tecmo Archive Migrator\nVersion 1.0\nCreated by ropean\nSource: https://github.com/ropean/KoeiTecmoArchiveMigerator</sys:String>

    <sys:String x:Key="SelectFolderText">选择文件夹</sys:String>
</ResourceDictionary>